<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="android-completion"
            android:textIsSelectable="true"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/createat"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="Forked from mbrubeck/android-completion"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/descrip"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="Bash completion for adb from the Google Android SDK"
            android:textIsSelectable="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">


            <TextView
                android:id="@+id/files"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/file_code"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:minWidth="100dp"
                android:paddingRight="10dp"
                android:text="1 file"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/comments"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/comment"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:minWidth="100dp"
                android:paddingRight="10dp"
                android:text="0 comment"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/forks"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/fork"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingRight="10dp"
                android:text="2 forks"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/stars"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/star_1"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="43 stars"
                android:textSize="15sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>